# User App Environment Variables
# Copy this file to .env.local and configure

# API Configuration
NEXT_PUBLIC_API_URL=http://api.printable.co.in:8000
NEXT_PUBLIC_APP_URL=http://app.printable.co.in:3000

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Database (Neon/PostgreSQL)
DATABASE_URL=your_database_connection_string

# Pusher (Real-time)
NEXT_PUBLIC_PUSHER_APP_KEY=your_pusher_app_key
PUSHER_APP_ID=your_pusher_app_id
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=your_pusher_cluster

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# App Settings
NEXT_PUBLIC_APP_NAME=Printable
NEXT_PUBLIC_APP_DESCRIPTION=Your Printing Partner
